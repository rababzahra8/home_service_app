<div class="bg-[#3b5d50] text-white w-full h-full flex items-center justify-center">
  <div class="w-full max-w-sm p-6 mb-10 rounded border border-white shadow-lg">
    <h2 class="text-2xl font-bold mb-4">Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, scope: :user do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-2">
        <%= f.label :name %><br />
        <%= f.text_field :name, autocomplete: "name", class: "w-full p-2 border-b-2 border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>
      <div class="mb-2">
        <%= f.label :age %><br />
        <%= f.number_field :age, autocomplete: "age", class: "w-full p-2 border-b-2  border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>
      <div class="mb-2">
        <%= f.label :gender %><br />
        <%= f.select :gender, User.genders.keys, {}, class: "w-full p-2 border-b-2  border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>
      <div class="mb-2">
        <%= f.label :role %><br />
        <%= f.select :role, User.roles.slice("seller", "buyer").keys, {}, class: "w-full p-2 border-b-2 border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>
      <div class="mb-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border-b-2  border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>
      <div class="mb-2">
        <%= f.label :password %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 border-b-2  border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>
      <div class="mb-2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border-b-2  border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-700 focus:outline-none focus:shadow-outline-green active:bg-green-800" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
