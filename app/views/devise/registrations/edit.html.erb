<div class="w-full h-full flex items-center justify-center add-top-padding">
  <div class="w-full max-w-sm p-6 mb-10 rounded border border-white shadow-lg bg-[#030637] text-white">
    <h2 class="text-2xl font-bold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-2">
        <%= f.label :name %><br />
        <%= f.text_field :name, autocomplete: "name", class: "w-full p-2 border-b-2 border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>

      <div class="mb-2">
        <%= f.label :age %><br />
        <%= f.number_field :age, autocomplete: "age", class: "w-full p-2 border-b-2 border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>

      <div class="mb-2">
        <%= f.label :gender %><br />
        <%= f.select :gender, User.genders.keys, {}, class: "w-full p-2 border-b-2 border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>

      <div class="mb-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border-b-2 border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-2">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 border-b-2 border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="mb-2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border-b-2 border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>

      <div class="mb-2">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full p-2 border-b-2 border-white bg-white rounded focus:outline-none focus:border-green-500 text-black" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "px-4 py-2 bg-white text-black rounded-md hover:bg-[#7A0958] focus:outline-none focus:shadow-outline-purple active:bg-[#5E0844] btn-login" %>
      </div>
    <% end %>

    <h3 class="text-lg font-semibold mt-4">Cancel my account</h3>

    <div class="mb-4">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-white" %></div>

    <%= link_to "Back", :back, class: "text-white" %>
  </div>
</div>
