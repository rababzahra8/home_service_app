<div class="w-full h-full flex items-center justify-center">
  <div class="w-full max-w-sm p-6 mb-10 rounded border border-white shadow-lg bg-[#030637] text-white">
    <h2 class="text-2xl font-semibold mb-6">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-white-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-md" %>
      </div>
      <div class="mb-6">
        <%= f.submit "Send me reset password instructions",class: "px-4 py-2 bg-white text-black rounded-md hover:bg-[#7A0958] focus:outline-none" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
