<div class="w-full h-full flex items-center justify-center">
  <div class="w-full max-w-sm p-6 mb-10 rounded border border-white shadow-lg bg-[#030637] text-white">
    <h2 class="text-2xl font-semibold mb-6">Change your password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="mb-4">
        <%= f.label :password, "New password", class: "block text-white-700 text-sm font-bold mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-gray-600 text-sm">(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-md" %>
      </div>
      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm new password", class: "block text-white-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-md" %>
      </div>
      <div class="mb-6">
        <%= f.submit "Change my password", class: "px-4 py-2 bg-white text-black rounded-md hover:bg-[#7A0958] focus:outline-none" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
