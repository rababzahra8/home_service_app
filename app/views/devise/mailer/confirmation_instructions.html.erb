  <p class="text-lg mb-4">Welcome <%= @email %>!</p>

  <p class="mb-4">You can confirm your account email through the link below:</p>

  <p class="mb-4">
    <%= link_to 'Confirm my account', confirmation_url(@resource, confirmation_token: @token), class: 'text-blue-500 underline' %>
  </p>
</div>
