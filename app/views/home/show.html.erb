<%= turbo_frame_tag "my-category" do %>
  <div class="dashboard-container">
    <div class="container mx-auto p-4 mb-48">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="mb-4 md:mb-0">
          <%= image_tag(@service.avatar, alt: "Product Image", class: "w-full h-auto md:w-96 rounded-lg border") %>
        </div>
        <div class="pt-8">
          <h1 class="text-3xl font-bold mb-2"><%= @service.title %></h1>
          <p class="text-lg font-semibold mb-2">Price: <%= number_to_currency(@service.price, unit: 'Â£') %></p>
          <p class="text-gray-700 mb-4"><%= @service.description %></p>
          <%= form_tag(payments_create_path(service_id: @service.id), method: 'post') do %>
            <script
              src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-name="<%= @service.title %>"
              data-description="Payment for <%= @service.title %>"
              data-amount="<%= (@service.price * 100).to_i %>"
              data-currency="usd"
              data-locale="auto"
              data-zip-code="false"
              data-email="<%= current_user.email %>"
            ></script>
          <% end %>
        </div>
      </div>
      <!-- Display reviews for the service -->
      <div class="mt-8">
        <h2 class="text-2xl font-semibold mb-4">Reviews</h2>
        <% if @service.reviews.any? %>
          <ul>
            <% total_ratings = @service.reviews.sum(:rating).to_f %>
            <% average_rating = total_ratings / @service.reviews.count %>
            <div class="flex items-center mb-2">
              <% (1..5).each do |i| %>
                <svg class="w-4 h-4 <%= i <= average_rating ? 'text-yellow-300' : 'text-gray-300 dark:text-gray-500' %> me-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                  <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                </svg>
              <% end %>
              <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400"><%= format('%.2f', average_rating) %></p>
              <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400">out of 5</p>
            </div>
            <% @service.reviews.each do |review| %>
              <li>
                <strong>Rating:</strong>
                <div class="flex items-center">
                  <% (1..5).each do |i| %>
                    <svg class="w-4 h-4 <%= i <= review.rating ? 'text-yellow-300' : 'text-gray-300 dark:text-gray-500' %> me-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                    </svg>
                  <% end %>
                </div>
                |
                <strong>Comment:</strong> <%= review.comment %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p>No reviews yet.</p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
