<%= turbo_frame_tag "my-category" do %>
  <div class="dashboard-container">
    <div class="container mx-auto p-4 mb-48">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="mb-4 md:mb-0">
          <%= image_tag(@service.avatar, alt: "Product Image", class: "w-full h-auto md:w-96 rounded-lg border") %>
        </div>
        <div class="pt-8">
          <h1 class="text-3xl font-bold mb-2"><%= @service.title %></h1>
          <p class="text-lg font-semibold mb-2">Price: <%= number_to_currency(@service.price, unit: 'Â£') %></p>
          <p class="text-gray-700 mb-4"><%= @service.description %></p>
          <%= form_tag(payments_create_path(service_id: @service.id), method: 'post') do %>
            <script
              src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-name="<%= @service.title %>"
              data-description="Payment for <%= @service.title %>"
              data-amount="<%= (@service.price * 100).to_i %>"
              data-currency="usd"
              data-locale="auto"
              data-zip-code="false"
              data-email="<%= current_user.email %>"
            ></script>
          <% end %>
        </div>
      </div>

      <!-- Display reviews for the service -->
      <div class="mt-8">
        <h2 class="text-2xl font-semibold mb-4">Reviews</h2>
        <% if @service.reviews.any? %>
          <ul>
            <% @service.reviews.each do |review| %>
              <li>
                <strong>Rating:</strong> <%= review.rating %> |
                <strong>Comment:</strong> <%= review.comment %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p>No reviews yet.</p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
