<section class="bg-white dark:bg-gray-900">
    <div class="grid max-w-screen-xl px-4 pt-20 pb-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12 lg:pt-28">
        <div class="mr-auto place-self-center lg:col-span-7">
            <h1 class="max-w-2xl mb-4 text-5xl font-extrabold leading-none tracking-tight md:text-6xl xl:text-7xl text-[#030637]">Your Comfort, <br>Our Commitment. </h1>
            <p class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">Bringing Quality Home Services to Your Doorstep. </p>
            <div class="space-y-4 sm:flex sm:space-y-0 sm:space-x-4">
                <a href="/home/all_services" class="inline-flex items-center justify-center w-full px-5 py-3 text-sm font-medium text-center text-gray-900 border border-gray-200 rounded-lg sm:w-auto hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800">
                    <svg class="w-4 h-4 mr-2 text-gray-500 dark:text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 496 512"></svg>Explore Services
                </a> 
            </div>
        </div>
        <div class="lg:mt-0 lg:col-span-5 lg:flex">
            <%= image_tag("service.jpg", alt: "hero image", class: "w-full h-auto") %>
        </div>                
    </div>
</section>
<section class="bg-gray-50 dark:bg-gray-800">
  <div class="max-w-screen-xl px-4 py-8 mx-auto lg:py-24 lg:px-6">
    <h2 class="text-3xl font-semibold mb-8 text-neutral-800 dark:text-neutral-50">TOP SERVICES</h2>
    <div class="flex space-x-4 overflow-x-auto lg:space-y-20">
      <% @services.each do |service| %>
        <div class="mx-2 mt-4 flex flex-col rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700">
        <div class="relative overflow-hidden rounded-t-lg" style="padding-top: 60%;">
          <%= image_tag service.avatar, class: "absolute inset-0 w-full h-full object-cover" if service.avatar.attached? %>
        </div>
        <div class="p-4 flex flex-col">
          <h5 class="mb-2 text-lg font-medium leading-tight text-neutral-800 dark:text-neutral-50">
            <%= service.title %>
          </h5>
          <p class="mb-2 text-base text-neutral-600 dark:text-neutral-200">
            <%= truncate(service.description, length: 80) %>
          </p>
          <div class="flex-grow"></div>
          <div class="flex justify-between items-center border-t-2 border-neutral-100 px-2 py-2 dark:border-neutral-600 dark:text-neutral-50">
            <span>Status: <%= service.status %></span>
            <div class="flex">
              <%= link_to 'Show', service_path(service), class: 'text-blue-500 underline mr-2' %>
            </div>
          </div>
      </div>
        </div>
      <% end %>
    </div>
  </div>
</section>