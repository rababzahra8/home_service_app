<div class="dashboard-container">
  <div class="container mx-auto p-4 mb-48">
    <h2 class="text-2xl font-semibold mb-4 text-neutral-800 dark:text-neutral-50">Services</h2>
    <%= turbo_frame_tag "catageory" do %>
      <div class="flex mb-4 space-x-4">
        <% @categories.each do |category| %>
          <%= link_to category.name, all_services_path(category_id: category.id), class: "bg-blue-500 text-white px-4 py-2 rounded", data: { turbo_frame: "my-category"} %>
        <% end %>
      </div>
      <%= render "services", services: @services %>
    <% end %>
  </div>
</div>
