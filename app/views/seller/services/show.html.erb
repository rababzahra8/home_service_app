<div class="bg-blue-500 p-8 text-white">
  <h1 class="text-3xl font-bold mb-4">Service Details</h1>
  <p class="mb-2"><%= @service.title %> - Status: <%= @service.status %></p>
  <% if @service.rejected? %>
    <%= link_to 'Edit', edit_seller_service_path(@service), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-3 rounded inline-block transition duration-300 ease-in-out transform hover:-translate-y-1 ml-2' %>
    <%= form_with(model: @service, url: reapprove_seller_service_path(@service), method: :patch, class: 'inline-block') do |form| %>
      <%= form.text_area :reapproval_request, class: 'resize-none shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mr-2', placeholder: 'Comment for Reapproval Request' %>
      <%= form.submit 'Reapprove', class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-3 rounded inline-block transition duration-300 ease-in-out transform hover:-translate-y-1' %>
    <% end %>
  <% end %>
  <% @reviews.each do |review| %>
    <p class="mb-2"><%= review.comment %></p>
  <% end %>
</div>
