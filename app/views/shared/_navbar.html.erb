<header class="fixed w-full">
    <nav class="bg-[#030637] border-gray-200 py-2.5 dark:bg-gray-900">
        <div class="container mx-auto flex items-center justify-between px-4">
            <!-- Logo and Site Name -->
            <a href="<%= root_path %>" class="flex items-center">
                <%= image_tag("logo-home.svg", alt: "Homely Help Icon", class: "navbar-logo h-6") %>
            </a>
            <!-- Search Bar -->
            <%= form_tag(all_services_path, method: :get, class: "md:flex items-center") do %>
                <%= text_field_tag :search, params[:search], class: "px-2 py-1 border border-gray-300 rounded-md focus:outline-none focus:border-purple-700 bg-gray-100 text-sm", placeholder: "Search..." %>
                <%= submit_tag "Search", class: "px-4 py-2 bg-[#910A67] text-white rounded-md ml-2" %>
            <% end %>
            <!-- Navigation Links -->
            <ul class="flex items-center space-x-4 lg:space-x-8">
                <li>
                    <%= link_to("Home", root_path, class: "nav-link") %>
                </li>
                <% if user_signed_in? %>
                    <% if current_user.admin? %>
                        <%= link_to("Admin", admin_dashboard_index_path, class: "nav-link") %>
                    <% elsif current_user.seller? %> 
                        <%= link_to("Seller", seller_dashboard_index_path, class: "nav-link") %>
                    <% else %>
                        <%= link_to("Customer", "#", class: "nav-link") %>
                    <% end %>
                <% end %>
                <li>
                    <%= link_to("Services", all_services_path, class: "nav-link") %>
                </li>
            </ul>
            <!-- Logout / Login Button -->
            <div>
                <% if user_signed_in? %>
                    <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn-logout" %>
                <% else %>
                    <%= link_to "Log In", new_user_session_path, class: "btn-login" %>
                <% end %>
            </div>
        </div>
    </nav>
</header>
