<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  <% @services.each do |service| %>
    <div class="bg-white p-4 rounded-lg border border-gray-300">
      <div class="relative overflow-hidden rounded-t-lg mb-4" style="padding-top: 60%;">
        <%= image_tag service.avatar, class: "absolute inset-0 w-full h-full object-cover" if service.avatar.attached? %>
      </div>
      <h3 class="text-lg font-medium mb-2"><%= service.title %></h3>
      <p class="text-sm text-gray-600 mb-2"><%= service.status %></p>
      <div class="mb-2">
        <%= render 'status_form', service: service %>
      </div>
      <% if service.status == 'rejected' %>
      <p class="text-sm text-gray-600"><%= service.rejection_reason %></p>
      <% end %>
    </div>
  <% end %>
</div>
