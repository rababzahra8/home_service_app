<h1 class="text-2xl font-semibold mb-4">Admin Dashboard</h1>

<div class="grid grid-cols-2 gap-4">
  <div class="bg-[#030637] p-4 rounded-md shadow-md">
    <h2 class="text-lg font-semibold mb-2">Total Users</h2>
    <p class="text-white"><%= @total_users %></p>
  </div>

  <div class="bg-[#030637] p-4 rounded-md shadow-md">
    <h2 class="text-lg font-semibold mb-2">Total Sellers</h2>
    <p class="text-white"><%= @total_sellers %></p>
  </div>

  <div class="bg-[#030637] p-4 rounded-md shadow-md">
    <h2 class="text-lg font-semibold mb-2">Total Customers</h2>
    <p class="text-white"><%= @total_customers %></p>
  </div>

  <div class="bg-[#030637] p-4 rounded-md shadow-md">
    <h2 class="text-lg font-semibold mb-2">Total Services</h2>
    <p class="text-white"><%= @total_services %></p>
  </div>
</div>

<!-- User List -->
<div class="mt-8">
  <h2 class="text-xl font-semibold mb-4">User List</h2>
  <table class="min-w-full divide-y divide-gray-200">
    <thead>
      <tr>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
          Username
        </th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
          Email
        </th>
         <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
          Role
        </th>
        <th class="px-6 py-3 bg-gray-50"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="px-6 py-4 whitespace-no-wrap">
            <%= user.name %>
          </td>
          <td class="px-6 py-4 whitespace-no-wrap">
            <%= user.email %>
          </td>
            <td class="px-6 py-4 whitespace-no-wrap">
            <%= user.role %>
          </td>
          <td class="px-6 py-4 whitespace-no-wrap">
            <%= link_to 'Show', admin_dashboard_path(user.id), class: 'text-blue-500 hover:underline' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
