<div class="container mx-auto p-4 bg-[#030637] border rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold mb-4 text-white">Admin Categories</h1>
  <table class="min-w-full border rounded-lg overflow-hidden">
    <thead class="bg-yellow-800 text-white">
      <tr>
        <th class="py-2 px-4">Name</th>
        <th class="py-2 px-4">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td class="py-2 px-4 text-white"><%= category.name %></td>
          <td class="py-2 px-4">
            <%= button_to 'Delete', admin_category_path(category), method: :delete, class: 'text-white hover:underline'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="mt-4">
    <%= link_to 'New Category', new_admin_category_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
