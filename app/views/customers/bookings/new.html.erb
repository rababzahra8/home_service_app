<!-- app/views/customers/bookings/new.html.erb -->
<div class="container mx-auto p-4 mb-48">
  <h1><%= @service.title %></h1>
  <p><%= @service.description %></p>
  <p>Price: <%= @service.price %></p>

  <%= form_with(model: [@service, @booking], url: customers_bookings_path(service_id: @service.id), method: :post) do |form| %>
    <div class="field">
      <%= form.hidden_field :service_id %>
    </div>    
    <div class="actions">
      <%= form.submit 'Book Now', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
