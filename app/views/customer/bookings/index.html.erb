<div class="dashboard-container">
  <h1>Booked Services</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-4">
    <% if @booked_services.any? %>
      <% @booked_services.each do |service| %>
        <div class="mx-2 mt-4 flex flex-col rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700">
          <div class="relative overflow-hidden rounded-t-lg" style="padding-top: 60%;">
            <%= image_tag service.avatar, class: "absolute inset-0 w-full h-full object-cover" if service.avatar.attached? %>
          </div>
          <div class="p-4 flex flex-col">
            <h5 class="mb-2 text-lg font-medium leading-tight text-neutral-800 dark:text-neutral-50">
              <%= service.title %>
            </h5>
             <h6 class="mb-2 text-lg font-medium leading-tight text-neutral-800 dark:text-neutral-50">
              $<%= service.price %>
            </h6>
            <p class="mb-2 text-base text-neutral-600 dark:text-neutral-200">
              <%= service.description %>
            </p>
            <div class="flex-grow"></div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No booked services found.</p>
    <% end %>
  </div>
</div>
