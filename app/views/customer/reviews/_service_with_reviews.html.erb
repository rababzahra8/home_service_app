<h2 class="text-2xl font-semibold mb-4">Services with Reviews</h2>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-4">
  <% services_with_reviews.each do |service| %>
    <div class="bg-white p-6 rounded-md shadow-md">
      <a href="#" class="block">
        <%= image_tag(service.avatar, alt: "Product Image", class: "w-full h-48 object-cover rounded-md mb-4") if service.avatar.present? %>
        <h3 class="text-lg font-semibold mb-2"><%= service.title %></h3>
        <p class="text-gray-600 mb-4"><%= truncate(service.description, length: 80) %></p>
        <% service.reviews.each do |review| %>
          <div class="border-t mt-4 pt-4">
            <div class="grid place-items-center overflow-x-scroll rounded-lg p-6 lg:overflow-visible">
              <div class="flex items-center gap-2 font-bold text-blue-gray-500">
                <%= review.rating  %>
                <div class="inline-flex items-center">
                  <div class="flex space-x-2">
                    <%  review.rating.to_i.times do  %>
                      <span>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                             class="w-6 h-6 text-yellow-500 cursor-pointer">
                          <path fill-rule="evenodd"
                                d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                                clip-rule="evenodd"></path>
                        </svg>
                      </span>
                    <% end %>
                    <% (5 - review.rating.to_i).times do %>
                      <span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                             class="w-6 h-6 cursor-pointer text-blue-gray-500">
                          <path stroke-linecap="round" stroke-linejoin="round"
                                d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z">
                          </path>
                        </svg>
                      </span>
                    </div>
                     <% end %>
                  </div>
                </div>
              </div>
            </div>
            <p class="text-gray-600 mt-2"><strong>Comment:</strong> <%= review.comment %></p>
          </div>
        <% end %>
      </a>
    </div>
  <% end %>
</div>