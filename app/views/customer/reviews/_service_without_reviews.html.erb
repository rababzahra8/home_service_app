<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-4">
  <% booked_services_without_reviews.each do |service| %>
    <div class="w-full md:w-1/2 xl:w-1/3 min-w-[300px] p-4 flex flex-col border border-gray-300 relative overflow-hidden"> <!-- Adjusted width and added overflow-hidden -->
      <a href="#" class="flex flex-col h-full">
        <%= image_tag(service.avatar, alt: "Product Image", class: "hover:grow hover:shadow-lg object-cover w-full h-72 rounded-t-md") if service.avatar.present? %> <!-- Adjusted image styling -->
        <div class="p-4">
          <p class="text-lg font-semibold"><%= service.title %></p>
          <p class="pt-1 text-gray-900"><%= service.description %></p> <!-- Moved description under the name -->
        </div>
        <p class="pt-1 text-gray-900"><%= number_to_currency(service.price, unit: 'Â£') %></p>
        <div class="mt-auto p-4"> <!-- Adjusted spacing and padding for the button -->
          <%= link_to 'Write a Review', new_customer_review_path(service_id: service.id), class: 'block w-full bg-blue-500 text-white rounded-md py-2 px-4 text-center hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue' %>
        </div>
      </a>
    </div>
  <% end %>
</div>
